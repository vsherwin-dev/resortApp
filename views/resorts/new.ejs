<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">New Resort</h1>
        <div class="col-6 offset-3">
            <form action="/resorts" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="resort[title]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="resort[location]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <!-- <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="resort[image]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div> -->
                <!-- <input type="file" name="resort[image]" id="image" multiple> -->
                <div class="mb-3">
                    <label class="form-label" for="price">Resort Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="resort[price]" required>
                    </div>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="resort[description]"
                        required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <div class="form-file custom-file">
                        <input type="file" class="form-file-input" id="image" name="image" multiple>
                        <label class="form-file-label" for="image">
                            <span class="form-file-text custom-file-label">Choose image(s)...</span>
                            <span class="form-file-button">Browse</span>
                        </label>
                    </div>
                </div>
<!--                 
                <div class="mb-3">
                    <label for="image" class="form-label">Default file input example</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                </div> -->

                <div class="mb-3">
                    <button class="btn btn-success">Add Resort</button>
                </div>
            </form>
            <a href="/resorts">All Resorts</a>
        </div>
    </div>